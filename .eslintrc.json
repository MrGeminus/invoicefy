{
    "env": {
        "node": true,
        "browser": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:prettier/recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "sourceType": "module",
        "project": "[./tsconfig.json]"
    },
    "rules": {
        "indent": "off",
        "no-unused-vars": "off"
    }
}